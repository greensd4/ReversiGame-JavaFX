<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="root" prefHeight="400.0" prefWidth="600.0" spacing="10" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.GameController">
   <children>
      <VBox fx:id="box" prefHeight="400.0" prefWidth="200.0">
         <children>
            <HBox>
               <children>
                  <VBox alignment="CENTER_LEFT" prefHeight="169.0" prefWidth="131.0" spacing="20.0">
                     <children>
                        <Label text="Current Player:" />
                        <Label text="Player1:" />
                        <Label text="Player 2:" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" prefHeight="169.0" prefWidth="91.0" spacing="20.0">
                     <children>
                        <Label fx:id="curPlayer" />
                        <Label fx:id="score1" />
                        <Label fx:id="score2" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <VBox alignment="CENTER" prefHeight="201.0" prefWidth="195.0" spacing="20.0">
               <children>
                  <Button fx:id="newGame" mnemonicParsing="false" onAction="#newGameAction" text="New game" />
                  <Button fx:id="endGame" mnemonicParsing="false" onAction="#endGameAction" text="End game" />
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</HBox>
